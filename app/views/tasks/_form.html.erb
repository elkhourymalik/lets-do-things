<div class="container text-center padded">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %></br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :description %></br>
          <%= f.text_field :description %>
        </div>
        <%= f.submit class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

