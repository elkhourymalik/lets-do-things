<div class="wrapper padded">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <%= link_to "Add a task", new_task_path, class:'btn btn-primary' %>
        <% @tasks.each do |task| %>
          <h2><%= link_to task.title, task_path(task) %></h2>
          <p><%= task.description %></p>
          <%= link_to "Modify task", edit_task_path(task) %>
          <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

